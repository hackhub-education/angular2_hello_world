{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./app_staging"
  },
  "compileOnSave": false,
  "include": [
        "app"
    ],
  "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
